<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/emergencyContactListItemIcon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/checkBox"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/profile_picture" />

    <TextView
        android:id="@+id/reportListItemName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/emergencyContactListItemIcon"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Edwin Yauyo" />

    <TextView
        android:id="@+id/reportListItemType"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/reportListItemName"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/emergencyContactListItemIcon"
        android:maxLines="2"
        android:paddingLeft="20dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:visibility="visible"
        tools:text="987654321" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:visibility="gone" />

</RelativeLayout>
