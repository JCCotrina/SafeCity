<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:background="?attr/selectableItemBackground"
    android:minHeight="64dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/reportListItemName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill|fill_horizontal"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Edwin Yauyo" />

    <TextView
        android:id="@+id/reportListItemType"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_below="@id/reportListItemName"
        android:layout_gravity="fill|fill_horizontal"
        android:maxLines="2"
        android:paddingEnd="16dp"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Robo" />

    <ImageView
        android:id="@+id/reportListItemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill|fill_horizontal"
        android:layout_toEndOf="@id/reportListItemName"
        android:padding="16dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <TextView
        android:id="@+id/reportListItemTime"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_below="@id/reportListItemIcon"
        android:layout_gravity="fill|fill_horizontal"
        android:layout_toEndOf="@id/reportListItemType"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textSize="12sp"
        tools:text="hace 12 minutos(s)" />

</GridLayout>
